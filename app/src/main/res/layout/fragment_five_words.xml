<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LearningFragment.LearningWords.FiveWordsFragment">

    <TextView
        android:id="@+id/tv_five_words"
        android:text="Изучение слов происходит максимум по 5 для лучшего запоминания"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_five_words"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_five_words"
        android:layout_below="@+id/tv_five_words" />

    <Button
        android:id="@+id/btn_five_words"
        android:text="ДАЛЬШЕ"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:background="@drawable/botton_panel_for_all"/>

</RelativeLayout>
