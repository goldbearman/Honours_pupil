<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryDark">@color/purple_primary_dark</item>
        <item name="colorAccent">@color/purple_primary</item>
    </style>

    <style name="YellowTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryDark">@color/yellow_primary_dark</item>
        <item name="colorAccent">@color/yellow_accent</item>

        <item name="alertDialogTheme">@style/AlertDialogCustom</item>

        <item name="editTextStyle">@style/style_et</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <style name="style_et" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

